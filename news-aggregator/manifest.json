{
  "manifest_version": 3,
  "name": "Customizable News Feed Aggregator",
  "version": "1.0",
  "description": "A personalized news feed based on user-selected topics.",
  "permissions": ["storage", "notifications", "alarms"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-news-16.png",
      "48": "icons/icon-news-48.png",
      "128": "icons/icon-news-128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon-news-16.png",
    "48": "icons/icon-news-48.png",
    "128": "icons/icon-news-128.png"
  }
}
